<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Page d'inscription</title>

        {{ encore_entry_link_tags('app') }}

        {{ encore_entry_script_tags('app') }}
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="d-flex justify-content-center mt-5">
                    <div class="card " style="width: 39rem; padding: 20px;box-shadow: 5px 10px 8px #888888;">

                        <h5 class="fw-bold text-center m-3">Cr√©ation du comptes utilisateur</h5>
                        {{ form_start(registrationForm) }}
                            <div class="row">
                                <div class="col-6">
                                    {{ form_row(registrationForm.nom) }}
                                    {{ form_row(registrationForm.prenom) }}
                                    {{ form_row(registrationForm.sexe) }}
                                    {{ form_row(registrationForm.email) }}
                                    {{ form_row(registrationForm.caisse) }}
                                </div>
                                <div class="col-6">
                                    {{ form_row(registrationForm.responsabilite) }}
                                    {{ form_row(registrationForm.password, { label: 'Password' }) }}
                                    {{ form_row(registrationForm.agence, {blabel: 'Code agence' }) }}
                                </div>
                            </div>
                            <div class="row m-2">
                                <div class="col-6">
                                    {{ form_row(registrationForm.agreeTerms) }}
                                </div>
                                <div class="col-sm-6 col-md-6 d-flex justify-content-end">
                                    <a href="{{path('app_connexion_')}}" class=" me-2"><i class="fa fa-pencil"></i>Connexion</a>
                                    <a href="{{path('app_liste_user')}}" class=""><i class="fa fa-list"></i> Listes </a>
                                </div>
                            </div>
                            <div class="row">
                                <div class="d-flex justify-content-end">
                                    <button type="submit" class="btn btn-primary btn-sm">Enregistrer</button>
                                </div>
                            </div>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

