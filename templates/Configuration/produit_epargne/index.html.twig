{% extends "base.html.twig" %}

{% block title %}
    Produits epargnes
{% endblock %}

{% block head %}
    Produits epargnes
{% endblock %}

{% block body %}
    {% include('modal.html.twig') %}
    <div class="d-flex justify-content-end m-2">
        <a href="{{ path('app_produit_epargne_new') }}" class="btn btn-primary btn-sm"> Nouveau produits </a>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Code produit</th>
                <th>Nom produit</th>
                <th>Status produit</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody class="jumbotron jumbotron-fluid">
        {% for produit_epargne in produit_epargnes %}
            <tr>
                <td>{{ "%03d" | format(produit_epargne.id) }}</td>
                <td>{{ produit_epargne.nomproduit }}</td>
                <td>
                    <a class="btn btn-success btn-sm">{{ produit_epargne.isdesactive ? 'Active':'Desactive' }}</a>
                </td>
                <td>
                    <div class="row">
                        <div class="col-sm-2">
                            <a href="{{ path('app_produit_epargne_show', {'id': produit_epargne.id}) }}" class="btn btn-primary btn-sm"><i class="fa fa-eye"></i></a>
                        </div>
                        <div class="col-sm-2">
                            <a href="{{ path('app_produit_epargne_edit', {'id': produit_epargne.id}) }}" class="btn btn-success btn-sm"><i class="fa fa-edit"></i></a>
                        </div>
                        <div class="col-sm-8">
                            {{ include('Configuration/produit_epargne/_delete_form.html.twig') }}
                        </div>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

