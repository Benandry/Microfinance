{% extends "base.html.twig" %}
{% block title "Configuration epargne "~ configs.produitEpargne.nomproduit %}
{% block head " > Configuration epargne "~ configs.produitEpargne.nomproduit %}

{% block body %}

<div class="container py-3">
    <section>
        <div class="row">
            <div class="col-md-4 col-ms-4 m-auto">
                <div class="fw-bold">{{ configs.produitEpargne.nomproduit }}</div>
            </div>
            <div class="col-md-8 col-ms-8">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Negatif</th>
                            <td>{{ configs.IsNegatif ? 'Yes' : 'No' }}</td>
                        </tr>
                        <tr>
                            <th>Devise</th>
                            <td>{{ configs.deviseutiliser.devise }}</td>
                        </tr>
                        <tr>
                            <th>Nombre minimum retrait</th>
                            <td>{{ configs.nbMinRet }}</td>
                        </tr>
                        <tr>
                            <th>Nombre jour maximum depot</th>
                            <td>{{ configs.NbrJrMaxDep }}</td>
                        </tr>
                        <tr>
                            <th>Age minimum ouverture compte</th>
                            <td>{{ configs.ageMinCpt }}</td>
                        </tr>
                        <tr>
                            <th>Commission de transaction</th>
                            <td>{{ configs.commissionTransf }}</td>
                        </tr>
                        <tr>
                            <th>Solde d'ouverture</th>
                            <td>{{ configs.soldeouvert }}</td>
                        </tr>
                        <tr>
                            <th>Frais fermeture compte</th>
                            <td>{{ configs.fraisFermCpt }}</td>
                        </tr>
                        <tr>
                            <th>Compte Produit</th>
                            <td>{{ config_ep.compteProduit.NumeroCompte }}--{{ config_ep.compteProduit.Libelle }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>

    <a href="{{ path('app_config_ep_index') }}" class="btn btn-sm btn-info ">Configuration </a>

    <a href="{{ path('app_config_ep_edit', {'id': configs.id}) }}"  class="btn btn-sm btn-warning ">Modifier </a>

    {{ include('Configuration/config_ep/_delete_form.html.twig') }}
{% endblock %}

