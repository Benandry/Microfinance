{% extends "base.html.twig" %}
{% block title  %}
    Liste devise
{% endblock %}

{% block head  %}
    Liste devise
{% endblock %} 

{% block body %}
    <h1>Devise</h1>

      {# /***************Messages succes ******************/#}
      {% for message in app.flashes('success') %}
            <strong>{{ message }}</strong>
  {% endfor %}

    <table class="table table-bordered">
        <thead >
            <tr>
                <th>Devise</th>
                <th>Pays</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody class="junbotron jumbotron-fluid">
        {% for devise in devises %}
            <tr>
                <td>{{ devise.devise }}</td>
                <td>{{ devise.pays }}</td>
                <td>
                    <div class="row">
                        <div class="col-sm-2">
                            <a href="{{ path('app_devise_show', {'id': devise.id}) }}" class="btn btn-primary btn-sm"><i class="fa fa-eye"></i> </a>
                        </div>
                        <div class="col-sm-2">
                            <a href="{{ path('app_devise_edit', {'id': devise.id}) }}" class="btn btn-info btn-sm"> <i class="fa fa-edit"></i> </a>
                        </div>
                        <div class="col-sm-8">
                            {{ include('references/devise/_delete_form.html.twig') }}
                        </div>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_devise_new') }}" class="btn btn-primary btn-sm">Ajouter nouveau</a>
{% endblock %}