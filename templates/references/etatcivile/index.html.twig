{% extends "base.html.twig" %}

{% block title %}
    Etat civile
{% endblock %}

{% block head %}
    Etat civile
{% endblock %}

{% block body %}
    <h1>Etat civile</h1>
       {# /***************Messages succes ******************/#}
       {% for message in app.flashes('success') %}
            <strong class="alert alert-success ">{{ message }}</strong>
        {% endfor %}

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Etat civile</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody class="jumbotron jumbotron-fluid">
        {% for etatcivile in etatciviles %}
            <tr>
                <td>{{ etatcivile.etatcivile }}</td>
                <td>
                   <div class="row">
                         <div class="col-sm-2">
                            <a href="{{ path('app_etatcivile_show', {'id': etatcivile.id}) }}" class="btn btn-primary btn-sm"><i class="fa fa-eye"></i></a>
                        </div>
                        <div class="col-sm-2">
                            <a href="{{ path('app_etatcivile_edit', {'id': etatcivile.id}) }}" class="btn btn-info btn-sm"><i class="fa fa-edit"></i></a>
                        </div>
                        <div class="col-sm-8">
                            {{ include('references/etatcivile/_delete_form.html.twig') }}
                        </div>
                   </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_etatcivile_new') }}" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i>Ajouter nouveau</a>
{% endblock %}
