{% extends "base.html.twig" %}

{% block title %}
    Langues
{% endblock %}

{% block head %}
    Langues
{% endblock %}

{% block body %}
      {# /***************Messages succes ******************/#}
    {% for message in app.flashes('success') %}
        <strong class="alert alert-success">{{ message }}</strong>
    {% endfor %}

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Langue</th>
                <th>Pays</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody class="jumbotron jumbotron-fluid">
        {% for langue in langues %}
            <tr>
                <td>{{ langue.langue }}</td>
                <td>{{ langue.pays }}</td>
                <td>
                    <div class="row">
                        <div class="col-sm-2">
                            <a href="{{ path('app_langue_show', {'id': langue.id}) }}" class="btn btn-primary btn-sm"><i class="fa fa-eye"></i></a>
                        </div>
                        <div class="col-sm-2">
                            <a href="{{ path('app_langue_edit', {'id': langue.id}) }}" class="btn btn-success btn-sm"><i class="fa fa-edit"></i></a>
                        </div>
                        <div class="col-sm-8">
                            {{ include('references/langue/_delete_form.html.twig') }}
                        </div>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_langue_new') }}" class="btn btn-primary btn-sm"> <i class="fa fa-plus"></i>Ajouter nouveau</a>
{% endblock %}

