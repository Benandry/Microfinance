{% extends "base.html.twig" %}

{% block title %}
    Depot de compte epargne {{ info.nomGroupe }}
{% endblock %}

{% block head %}
    Depot client groupe {{ info.nomGroupe }}
{% endblock %}

{% block body %}

        <div style="display:none;">
            <p> Text ecrit : <span id="text"> </span> </p>
        </div>
        {{ include('modal.html.twig') }}
        <div class="card p-3">
            <div class="card mb-3">
                <div class="row text-secondary m-3">
                    <div class="col-md-4 col-sm-4 m-auto">
                        <p> <b>Compte epargne : </b><span id="code_client"> {{ info.code }}</span></p>
                        <p> <b>Solde client : </b>
                            {% if solde != '' %}
                                <span id="solde_cli" style="display:none">{{ solde }}</span>  
                                <span>{{ solde|number_format(0,',', ' ') }}</span> 
                                <span class="devise-solde"></span>    
                            {% else %}
                                <span id="solde_cli">0</span>  
                                <span class="devise-solde"></span>
                            {% endif %} 
                        </p>
                        <p style="display: none;" id="produit-id">{{ id_produit }}</p>
                    </div>
                    <div class="col-md-4 col-sm-4 m-auto">
                        <div class="d-flex justify-content-center"> <h5 class="text-secondary"> Dépôt epargne </h5></div>
                    </div>
                    <div class="col-md-4 col-sm-4">
                        <p><b>Code client :</b> <span id="code_client"> {{ info.codegroupe }}</span></p>
                        <p><b>Email :</b> <span id="code_client"> {{ info.email }}</span></p>
                    </div>
                </div>
                {{ include('Module_epargne/transaction/_form.html.twig') }}
            </div>

            <P style="display:hide"><span id="code"> </span> </P>
            <P style="display:hide"><span id="nom"> </span> </P>
            <P style="display:hide"><span id="solde"> </span></p>
        </div>
{% endblock %}