{% extends "base.html.twig" %}

{% block title %}
    Depot de compte epargne 
{% endblock %}

{% block head %}
    Depot de compte epargne 
{% endblock %}

{% block body %}

            <div class="modal" tabindex="-1" id="myModal" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Modal title</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Modal body text goes here.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                    </div>
                </div>
            </div>


    <div class="rounded g-0 m-5 p-4 shadow-sm">
        {{ form_start(form) }}
            <div class="row">
                <div class="col-4 col-sm-4">
                    
                    {{ form_row(form.code)}}
                    <div id="code_suggest"></div>

                    <div style="display: none;">
                        {{ form_row(form.code_client)}}
                        {{ form_row(form.produit)}}
                        {{ form_row(form.nom)}}
                        {{ form_row(form.prenom)}}
                    </div>
                </div>
                <div class="col-auto col-sm-auto mt-3 ms-5" >
                    <p class="fw-bold"> Compte epargne : <span id="code_ep"></span> </p>
                    <p class="fw-bold"> Code Client : <span id="code_cli"></span> </p>
                    <p class="fw-bold"> Produit : <span id="produit"></span> </p>
                    <p class="fw-bold"> Nom Client : <span id="nom_cli"></span> </p>
                    <p class="fw-bold"> Prenom Client : <span id="prenom_cli"></span> </p>
                </div>
            </div>
            <div class="row">
                {{ form_row(form.submit)}}
            </div>
        {{ form_end(form)}}
    </div>
{% endblock %}