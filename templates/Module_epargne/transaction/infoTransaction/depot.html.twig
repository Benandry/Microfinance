{% extends "base.html.twig" %}

{% block title %}
    Depot de compte epargne 
{% endblock %}

{% block head %}
    
{% endblock %}

{% block body %}

    <div class="modal" tabindex="-1" id="myModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header titre_modal">
                    <h5 class="modal-title text-center">Depot compte epargne </h5>
                </div>

                {{ form_start(form) }}
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-12 col-sm-12 mt-3 ms-5" >
                                <p class="fw-bold"> Compte epargne : <span id="code_ep"></span> </p>
                                <p class="fw-bold"> Code Client : <span id="code_cli"></span> </p>
                                <p class="fw-bold"> Produit : <span id="produit"></span> </p>
                                <p class="fw-bold"> Nom Client : <span id="nom_cli"></span> </p>
                                <p class="fw-bold"> Prenom Client : <span id="prenom_cli"></span> </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-sm-12">
                                
                                {{ form_row(form.code)}}
                                <div id="code_suggest"></div>

                                <div style="display: none;">
                                    {{ form_row(form.code_client)}}
                                    {{ form_row(form.produit)}}
                                    {{ form_row(form.nom)}}
                                    {{ form_row(form.prenom)}}
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="modal-footer">
                        {{ form_row(form.submit)}}
                    </div>
                {{ form_end(form)}}
            </div>
        </div>
    </div>

{% endblock %}