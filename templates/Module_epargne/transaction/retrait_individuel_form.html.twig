{% extends "base.html.twig" %}

{% block title %}
    Retrait compte epargne 
{% endblock %}

{% block head %}
    Retrait compte epargne 
{% endblock %}

{% block body %}
{{ include('modal.html.twig') }}
<div class="row text-secondary">
    <div class="col-xl-3 col-md-3 col-sm-3">
        <p> <b>Compte epargne : </b><span id="code_epargne_client"> {{ code }}</span></p>
        <p> <b>Solde client : </b>
            {% if solde != '' %}
                <span id="solde_cli">{{ solde }}</span>     
            {% else %}
                <span id="solde_cli">0</span>  
            {% endif %} 
        </p>
    </div>
    <div class="col-xl-3 col-md-3 col-sm-3">
        <p><b> Nom Client :</b> <span id="nom"> {{ nom }}</span></p>
        <p><b> Prenom Client :</b> <span id="prenom"> {{ prenom }}</span></p>
    </div>
</div>


{{ form_start(form) }}
    <div style="display:none;">
        <p> Text ecrit : <span id="text"> </span> </p>
    </div>
    <div class="row jumbotron jumbotron-fluid" style="color:black;">
        <div class="col-sm-5" style="display:none;">
            {{ form_row(form.typeClient) }}
            {{ form_row(form.codeepargneclient) }}
        </div>
    </div>
    <hr>
    <div class="row jumbotron jumbotron-fluid" style="color:black;">
        <div class="col-sm-5">
            {{ form_row(form.DateTransaction) }}
            {{ form_row(form.PieceComptable) }}
            {{ form_row(form.Montant) }}
        </div>
            <div style="display:none;">
                {{ form_row(form.Description) }}
                {{ form_row(form.montant_bruite) }}
                {{ form_row(form.solde) }}
            </div>
        <div class="col-sm-5">
            {{ form_row(form.commission) }}
            {{ form_row(form.papeterie) }}
        </div>
    </div>
    <div class="row">
        <div class="d-flex justify-content-center">
            <button class="btn btn-primary btn-sm">{{ button_label|default('Valider le retrait') }}</button>
        </div>
    </div>
{{ form_end(form) }}
{% endblock %}