{% extends "base.html.twig" %}

{% block title %}
    Retrait compte epargne 
{% endblock %}

{% block head %}
    Retrait compte epargne 
{% endblock %}

{% block body %}
     {# /***************Messages succes ******************/#}
    
     {% for message in app.flashes('success') %}
            {{ message }}
     {% endfor %}
    {# *************************************#}

<div class="row">
    <div class="col-xl-3 col-md-3 col-sm-3">
        <p> <b>Compte epargne : </b><span id="code_epargne_client"> {{ code }}</span></p>
        <p> <b>Solde client : </b>
            {% if solde != '' %}
                <span id="solde_cli">{{ solde }}</span>     
            {% else %}
                <span id="solde_cli">0</span>  
            {% endif %} 
        </p>
    </div>
    {# <div class="col-xl-3 col-md-3 col-sm-3">
        <p><b>Code client :</b> <span id="code_client"> {{ codegroupe }}</span></p>
    </div> #}
    <div class="col-xl-3 col-md-3 col-sm-3">
        <p><b> Nom Client :</b> <span id="nom"> {{ nom }}</span></p>
        <p><b> Prenom Client :</b> <span id="prenom"> {{ prenom }}</span></p>
    </div>
</div>


{{ form_start(form) }}
  <div style="display:hide;">
            <p> Text ecrit : <span id="text"> </span> </p>
    </div>
    <div class="row jumbotron jumbotron-fluid" style="color:black;">
        <div class="col-sm-5" style="display:none;">
            {{ form_row(form.typeClient) }}
            {{ form_row(form.codeepargneclient) }}
        </div>
    </div>
    <hr>
    <div class="row jumbotron jumbotron-fluid" style="color:black;">
        <div class="col-sm-5">
            {{ form_row(form.DateTransaction) }}
            {{ form_row(form.PieceComptable) }}
            {{ form_row(form.Montant) }}
        </div>
            <div style="display:none;">{{ form_row(form.Description) }}</div>
        <div class="col-sm-5">
            {{ form_row(form.montant_bruite) }}
            {{ form_row(form.commission) }}
            {{ form_row(form.papeterie) }}
        </div>
    </div>
    <button class="btn btn-success">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}

<table class="table table-bordered">
    <thead class="alert alert-success"> 
        <tr>
            <th>Compte Epargne</th>
            <th>Nom et prenom client</th>
            <th>Solde</th>
        </tr>
    </thead> 
    <tbody class="jumbotron jumbotron-fluid">
        <tr>
            <td><span id="code"> </span> </td>
            <td><span id="nom"> </span> </td>
            <td><span id="solde"> </span> </td>
        </tr>
    </tbody>
</table>
{% endblock %}