{% extends "base.html.twig" %}

{% block title %}
    Ouvrir une compte epargne Client
{% endblock %}

{% block head %}
    
{% endblock %}

{% block body %}
    <div class="modal fade" id="myModal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
        
                    <!-- Modal Header -->
                <div class="modal-header titre_modal">
                    <h4 class="modal-title text-center">Info client </h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                {{ form_start(form) }} 
                    <!-- Modal body -->
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6 col-sm-6 m-auto">
                                {{ form_row(form.code)}}
                                <div id="code_suggest"></div>

                                <div style="display:none;">
                                    {{ form_row(form.nom)}}
                                    {{ form_row(form.prenom)}}
                                </div>
                            </div>  
                        </div>
                        <div class="row">    
                            <div class="col-md-10 col-sm-10 mt-3 m-auto" >
                                <p class="fw-bold"> Code Client : <span id="code_cli"></span> </p>
                                <p class="fw-bold"> Nom Client : <span id="nom_cli"></span> </p>
                                <p class="fw-bold"> Prenom Client : <span id="prenom_cli"></span> </p>
                            </div>
                        </div>
                    </div>
            
                    <!-- Modal footer -->
                    <div class="modal-footer mb-0">
                             {{ form_row(form.submit)}}
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div> 
{% endblock %}