{% extends "base.html.twig" %}

{% block title %}
    Ouvrir une compte epargne Client
{% endblock %}

{% block head %}
    compte epargne>Ouvrir une compte individuel
{% endblock %}

{% block body %}
    <div class="modal fade" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">
        
                    <!-- Modal Header -->
                <div class="modal-header titre_modal">
                    <h5 class="modal-title text-center">Compte epargne client individuel</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                {{ form_start(form) }} 
                    <!-- Modal body -->
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6 col-sm-6">
                                {{ form_row(form.code)}}
                            </div>
                            <div class="col-md-6 col-sm-6">
                                <p class="fw-bolder">Code  : <span id="codeclient"></span></p>
                                <p class="fw-bolder">Nom  : <span id="nom"></span></p>
                                <p class="fw-bolder">Prenom  : <span id="prenom"></span></p>
                            </div>
                        </div>
                    </div>
            
                    <!-- Modal footer -->
                    <div class="modal-footer mb-0">
                        <button type="submit" class="btn btn-primary btn-sm"> Suivant</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div> 
{% endblock %}