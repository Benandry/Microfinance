{% extends "base.html.twig" %}

{% block title %}
    Ouvrir un compte epargne groupe
{% endblock %}
{% block head 'compte epargne>Ouvrir une compte groupe' %}

{% block body %}
    <div class="modal fade" id="myModal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
        
                    <!-- Modal Header -->
                <div class="modal-header titre_modal">
                    <h4 class="modal-title text-center">Info Groupe </h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                {{ form_start(form) }} 
                    <!-- Modal body -->
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-6 col-sm-6 m-auto">
                                {{ form_row(form.code)}}
                                <div id="code_suggest"></div>

                                <div id="info_groupe">
                                    {{ form_row(form.nomgroupe)}}
                                    {{ form_row(form.email)}}
                                </div>
                            </div>
                        </div>
                        <div class="row">    
                            <div class="col-10 col-sm-10 mt-1 m-auto" >
                                <p class="fw-bold"> Code groupe : <span id="code_grp"></span> </p>
                                <p class="fw-bold"> Nom groupe : <span id="nom_grp"></span> </p>
                                <p class="fw-bold"> Adresse email du groupe: <span id="email_grp"></span> </p>
                            </div>
                        </div>

                    </div>
            
                    <!-- Modal footer -->
                    <div class="modal-footer mb-0">
                             {{ form_row(form.submit)}}
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}