{% extends "base.html.twig" %}

{% block title %}
    Réechelonnement
{% endblock %}

{% block head %}
    Réechelonnement
{% endblock %}

{% block body %}
    <div class="modal" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">
        
                    <!-- Modal Header -->
                <div class="modal-header titre_modal">
                    <h4 class="modal-title text-center">Réechelonnement </h4>
                </div>
                {{ form_start(form) }} 
                    <!-- Modal body -->
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-12 col-sm-12">
                                {{ form_row(form.CodeCredit) }}
                            </div>
                            <div class="col-12 col-sm-12" style="display:none">
                                {{ form_row(form.nom) }}
                                {{ form_row(form.prenom) }}
                                {{ form_row(form.codeclient) }}
                            </div>
                        </div>

                    </div>
            
                    <!-- Modal footer -->
                    <div class="modal-footer mb-0">
                        <input type="submit" value="valider" class="btn btn-primary">
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div> 
{% endblock %}