{% extends 'base.html.twig' %}

{% block title %}Fiche de Credit{% endblock %}
{% block head %}Fiche de Credit{% endblock %}

{% block body %}
    {{ include('modal.html.twig') }}
    
    {# {% if showFiche == false %}
        {{ include('Module_credit/rapportCredit/FicheCreditModal.html.twig') }}
    {% else %} #}
        <div class="card p-3">
        {# {% for tableau in tableau %} #}
             <div class="card">
                <div class="row text-secondary m-3">
                    <div class="col-2 col-sm-2 col-sm-2">
                    </div>
                    <div class="col-4 col-sm-4 col-sm-4">
                        <p class="fw-bold">Nom : {{ NomClient }}</p>
                        <p class="fw-bold"> Prenom :  {{ PrenomClient }} </p>
                    </div>
                    <div class="col-4 col-sm-4 col-sm-4">
                        <p class="fw-bold">Code Client : {{ Codecredit }} </p>
                        <p class="fw-bold"> Code Credit : {{ NumeroCredit }} </p>
                    </div>
                </div>
            </div>
        {# {% endfor %} #}
        <table class="table table-bordered mt-2">
            <thead>
                <tr>
                    <th>Date transaction</th>
                    <th>Transaction</th>
                    <th>Capital</th>
                    <th>Credit</th>
                    <th>Total</th>
                    <th>Penalite</th>
                </tr>
              
            </thead>
            <tbody>
            {% for ficheCredit in Fiche %}
                <tr>
                    <td>{{ ficheCredit.DateTransaction|date("d/m/Y")}}</td>
                    <td>{{ ficheCredit.Transaction }}</td>
                    <td>{{ ficheCredit.Capital }}</td>
                    <td>{{ ficheCredit.Interet }}</td>
                    <td>{{ ficheCredit.Total }}</td>
                    <td>{{ ficheCredit.Penalite }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {# {% endif %} #}

{% endblock %}
