{% extends 'base.html.twig' %}

{% block title %}Nouveau Approbation Credit{% endblock %}
{% block head %}Nouveau Approbation Credit{% endblock %}

{% block body %}
    <div class="card m-2 p-3">
        <div >
            {% for demande in demandes %}
                <div class="row">
                    <div class="col-4 col-sm-4">
                        <p> <span class="fw-bold">Nom du client : </span> <span id="nom"> {{ demande.nom_client }}</span> </p>
                        <p> <span class="fw-bold">Prenom du client : </span> <span id="prenom">{{ demande.prenom_client }}</span> </p>
                    </div>
                    <div class="col-4 col-sm-4">
                        <p> <span class="fw-bold">Code credit :  </span> <span id="codecredit">{{ demande.NumeroCredit }}</span> </p> 
                        <p> <span class="fw-bold">Montant du credit :  </span> <span id="montant">{{ demande.Montant }}</span> </p> 
                    </div>
                    <div class="col-4 col-sm-4">
                        <p> <span class="fw-bold">Nombre tranche :  </span> <span id="nombreTranche">{{ demande.NombreTranche }}</span> </p> 
                        <p> <span class="fw-bold">Type Tranche :  </span> <span id="typeTranche">{{ demande.TypeTranche }}</span> </p> 
                    </div>
                </div>
            {% endfor %}
        </div>
        {{ include('Module_credit/approbation_credit/_form.html.twig') }}
    </div>
{% endblock %}
