            <div class="col-6 col-xl-6 col-sm-6"> 
               <p> Montant Total :</p>
               <p> Interet total : </p>
               <p>Nombre tranche :</p>
            </div>
            <div class="col-6 col-xl-6 col-sm-6">
                 <p>{{ montant}}</p>
                 <p> {{ interet }} </p>
                 <p>{{  tranche }}</p>
            </div>
        </div> -->#}
    </div>
</div>
{% endblock %}
