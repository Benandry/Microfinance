{% extends 'base.html.twig' %}

{% block title %}Tableau d'amortissement simple {% endblock %}
{% block head %}par amortissement simple {% endblock %}

{% block body %}
    {{ include('modal.html.twig') }}
    <div class="card p-3">
        {# {% for tableau in tableau %} #}
             <div class="card">
                <div class="row text-secondary m-3">
                    <div class="col-4 col-sm-4 col-sm-4">
                        <p class="fw-bold">Montant credit : {{ MontantDemande }}  </p>
                        <p class="fw-bold"> Taux annuelle : {{ InteretA }} % </p>
                    </div>
                    <div class="col-4 col-sm-4 col-sm-4">
                        <p class="fw-bold">Code credit : {{ codecredit }} </p>
                        <p class="fw-bold"> Nombre tranche : {{ Periode }} </p>
                    </div>
                </div>
            </div>
        {# {% endfor %} #}
        <table class="table table-bordered mt-2">
            <thead>
                <tr>
                    <th>Periode(N)</th>
                    <th>Date de remboursement</th>
                    <th>Capital </th>
                    <th>Interet </th>
                    <th>Remboursement </th>
                    <th>Capital restant du </th>
                    <th>Interet Restant du</th>
                    <th>Montant Restant du </th>
                    {# <th></th> #}
                </tr>
            </thead>
            <tbody>
                {% for tableau in tableau %}
                    <tr>
                        <td> {{ tableau.Periode}} </td>
                        <td>{{ tableau.DateDemande|date("d/m/Y")}}</td>
                        <td>{{ tableau.Capital }}</td>
                        <td>{{ tableau.Interet }}</td>
                        <td>{{ tableau.Echeance }}</td>
                        <td>{{ tableau.CapitalRD }}</td>
                        <td>{{ tableau.IRD }}</td>
                        <td>{{ tableau.CRD }}</td>
                        {# <td> <a href="{{ path('app_amortissement_fixe_edit',{'id': tab.id}) }}" class="btn btn-sm btn-info"> <i class="fa fa-edit"></i> </a></td> #}
                    </tr>
                {% endfor %}
                {# <tr>
                    <th colspan="2">Total </th>
                    <th> {{ totalMontant }} </th>
                    <th> {{ totalInteret }} </th>
                    <th> {{ totalNet}} </th>
                </tr> #}
            </tbody>
        </table>
        {# <div class="d-flex justify-content-center">
            {{ form_start(form)}}
                {{ form_widget(form) }}
            {{ form_end(form)}}
        </div> #}
    </div>

{% endblock %}
