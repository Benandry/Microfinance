{{ form_start(form) }}
  <ul class="nav nav-tabs">
      <li class="nav-item"> <a class="nav-link active" data-bs-toggle="tab" href="#etape1">Renseignement</a></li>
      <li class="nav-item"id="garantiecredit"> <a class="nav-link" data-bs-toggle="tab" href="#etape3" >Garantie</a></li>
      <li class="nav-item"> <a class="nav-link" data-bs-toggle="tab" href="#etape2" id="patrimoine">Patrimoine</a></li>
  </ul>

    <div class="tab-content">
        {# Etape 1 #}
        <div class="tab-pane active" id="etape1">
        <div class="row shadow-sm p-3">
            <div class="col-12 col-sm-12 col-md-12">
              <h6 class="text-center text-primary">Renseignement</h6>
              <div class="row">
                  <div class="col-6 col-sm-6 col-md-6">
                      {{ form_row(form.ProduitCredit) }}
                      <div style="display:none;">
                        {{ form_row(form.TypeClient) }}
                        {{ form_row(form.codeclient) }}
                        {{ form_row(form.NumeroCredit) }}
                      </div>
                      {{ form_row(form.DateDemande) }}
                      {{ form_row(form.NombreTranche) }}
                      {{ form_row(form.cycles) }}
                  </div>
                  <div class="col-6 col-sm-6 col-md-6">
                      {{ form_row(form.TypeTranche) }}
                      {{ form_row(form.TauxInteretAnnuel) }}
                      {{ form_row(form.Montant) }}
                      {{ form_row(form.agent) }}
                  </div>

              </div>
            </div>
        </div>
      </div>

              {# Etape 3 #}

      <div class="tab-pane" id="etape3">
        <div class="row shadow-sm p-3">
            <div class="col-12 col-sm-12 col-md-12">
                <h6 class="text-center text-primary">Garantie</h6>
                <div class="row">
                    <div class="col-6 col-sm-6 col-md-6" style="display:none" id="garantiemorale">
                      {{ form_row(form.garant) }}
                    </div>
                    <div class="col-6 col-sm-6 col-md-6">
                        {# Affichage information garant #}
                        <div class="card" id="garant" style="display:none;">
                            <div class="card-body">
                                <h2>Garant</h2>
                                <p><b>Code client</b> :<span id="codeclient"></span></p>
                                <p><b>Nom</b> :<span id="nomgarant"></span></p>
                                <p><b>Prenom</b> :<span id="prenomgarant"></span></p>
                                <p><b>CIN</b> :<span id="cin"></span></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-sm-6" style="display:none" id="garantiefinanciere">
                      {{ form_row(form.CompteEpargne) }}
                      {{ form_row(form.SoldeEpargne) }}
                    </div>
                 </div>
        </div>
        </div>
      </div>

      <div class="tab-pane" id="etape2">
        <div class="row shadow-sm p-3">
            <div class="col-12 col-sm-12 col-md-12">
              <h6 class="text-center text-primary">Patrimoine</h6>
              <div class="row">
                  <div class="col-6 col-sm-6 col-md-6">
                    <div id="soldeepargneform">  
                    </div>  
                     <div style="display:;"> {{ form_row(form.codecreditprecedent) }}</div>
                      {{ form_row(form.Libelle1) }}
                      {{ form_row(form.Montant0) }}
                      {{ form_row(form.Libelle2) }}
                      {{ form_row(form.Montant2) }}

                  </div>
                   <div class="col-6 col-sm-6 col-md-6">
                      {{ form_row(form.Libelle3) }}
                      {{ form_row(form.Montant3) }}
                      {{ form_row(form.Libelle4) }}
                      {{ form_row(form.Montant4) }}

                  </div>

              </div>
            </div>
        </div>
      </div>

    </div>
    <button class="btn btn-sm btn-primary mt-4"><i class="fa fa-plus"></i> {{ button_label|default('Suivant') }}</button> 
{{ form_end(form) }}
