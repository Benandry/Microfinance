{% extends "base.html.twig" %}

{% block title %}
    {% if showTable == false %}
        Rapport compte epargne
    {% else %}
        Rapport compte epargne  
            {% if date_1 %} 
                jusq'a {{ one_date| date('d-m-Y') }} 
            {% elseif du and au %} 
                du {{ du| date('d-m-Y') }} au {{ au| date('d-m-Y')  }}
            {% else %}
                {{ titre }}
            {% endif %}
    {% endif %}
{% endblock %}


{% block head %}
    {% if showTable == false %}
    {% else %}
        Compte epargne > Rapport >  
            {% if date_1 %} 
                jusq'a {{ one_date| date('d-m-Y') }} 
            {% elseif du and au %} 
                du {{ du| date('d-m-Y') }} au {{ au| date('d-m-Y')  }}
            {% elseif agence %}
                {{ agence }}
            {% else %}
                {{ titre }}
            {% endif %}
    {% endif %}
{% endblock %}

{% block body %}
    {% if showTable == false %}
               <!-- The Modal -->
        
        <div class="modal fade" id="myModal">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
        
                    <!-- Modal Header -->
                    <div class="modal-header titre_modal">
                    <h5 class="modal-title text-center"> Rapport compte epargne  </h5>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    {{ form_start(form) }} 
                    <!-- Modal body -->
                     <div class="modal-body">    
                        <div class="row">
                            <div class="col-md-8 col-sm-8 col-xl-8 m-auto">
                                {{ form_row(form.individuel) }} 
                                {{ form_row(form.groupe) }} 
                                {{ form_row(form.agence) }}
                                <h6 class="text-center"> Date </h6>
                                {{ form_row(form.datearrete) }} 
                            </div>
                            <h6 class="text-center">Entre deux periode </h6>
                            <div class="row">
                                <div class="col-sm-6 col-md-6 col-xl-6">
                                    {{ form_row(form.datedebut) }} 
                                </div>
                                <div class="col-sm-6 col-md-6 col-xl-6">
                                    {{ form_row(form.datefin) }} 
                                </div>
                            </div> 
                        </div>
                    </div>
                
                    <!-- Modal footer -->
                    <div class="modal-footer mb-0">
                        <button type="submit" class="btn btn-sm btn-primary"> Filtrer </button>      
                     </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    {% else %} 
        <table class="table1 table table-bordered" style="margin-top:25px;">
            <thead>
                <tr>
                    <th>Date d'ouverture</th>
                    <th>Compte Epargne</th>
                    <th>Produit Epargne</th>
                    {% if titre %} 
                    {% else %}
                        <th>Info client Epargne</th>
                            {{ titre }}
                    {% endif %}
                    <th>Solde</th>
                </tr>
            </thead>
            <tbody class="jumbotron jumbotron-fluid" style="color:black;">
            {% for CompteEpargne in rapportcompteep %}
                <tr>
                    <td>{{ CompteEpargne.datedebut | date('Y-m-d') }}</td>
                    <td>{{ CompteEpargne.codeepargne }}</td>
                    <td>{{ CompteEpargne.nomproduit }}</td>
                    {% if titre %} 
                    {% else %}
                        {% if  CompteEpargne.typeClient ==  "INDIVIDUEL"  %}
                            <td> {{ CompteEpargne.nom_client }} {{ CompteEpargne.prenom_client }} </td>
                        {% elseif CompteEpargne.typeClient ==  "GROUPE"  %}
                            <td> {{ CompteEpargne.nomGroupe }} </td>
                        {% endif %}
                    {% endif %}

                    
                <td> {% if CompteEpargne.solde %} {{CompteEpargne.solde}} {% else %} 0 {% endif %}
                 </td>
                </tr>
            {%  endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}