{% extends "base.html.twig" %}
{% block title %}
    Patrimoine
{% endblock %}
{% block head %}
    Client>Individuels>Patrimoine
{% endblock %}
{% block body %}
    {{ include('modal.html.twig') }}

{{ form_start(form) }}
    <div class="row mb-3">
      <span style="display: none;" id="id-client-ind">{{ idclient }}</span>
        <div class="col-12">
            <div class="d-flex justify-content-end me-3">
                <a href="{{ path('app_liste_patrimoine',{'IdClient':idclient}) }}" class="btn btn-info btn-sm" ><i class="fa fa-plus"></i>Liste Patrimoine</a>
            </div>
        </div>
    </div>
    <div class="container">
    <section>
      <div class="card p-2">
        <div class="card mb-3">
          <div class="row text-secondary m-3">
          {# {% for infos in info %} #}
              <div class="col-xl-4 col-md-4 col-sm-4">
                  <p><b> Nom Client :</b> <span id="nom"> {{ info.getNomClient() }}</span></p>   
                  <p> <b>Prenom client : </b> <span id="prenom"> {{ info.getPrenomClient() }}</span></p> 
              </div>
              
              <div class="col-md-4 col-sm-4 m-auto">
                  <div class="d-flex justify-content-center"> <h5 class="text-secondary">  <i class="fas fa-landmark"></i> Patrimoine </h5></div>
              </div>
              <div class="col-xl-4 col-md-4 col-sm-4">
                  <p> <b>Code client :</b> <span id="code_client"> {{ info.getCodeclient() }}</span></p> 
              </div>
            
          {# {% endfor %} #}
          </div>              
        </div>
        <div class="fw-bold">
            <hr/>
        </div>
        <div class="row">
          <div class="col-4 col-sm-3 col-md-3 m-auto">
            {{ form_row(form.dateenregistrement) }}
          </div>
        </div>

        <div class="row" style="display: flex; justify-content: space-between">
            <div class="col-4 col-sm-4 col-md-4 m-auto">
                <h6 class="fw-bold text-center"> Montants </h6>
                {{ form_row(form.Montant1) }}
                {{ form_row(form.Montant2) }}  
                {{ form_row(form.Montant3) }}
                {{ form_row(form.Montant4) }}
            </div>
            <div class="col-4 col-sm-4 col-md-4 m-auto">
              <h6 class="fw-bold text-center"> libelle  </h6>
                {{ form_row(form.Libelle1) }}
                {{ form_row(form.Libelle2) }}
                {{ form_row(form.Libelle3) }}
                {{ form_row(form.Libelle4) }}
            </div>
        </div>
          <div style="display: none">
              {{ form_row(form.IdClient) }}
      </div>

        <div class="row">
          <div class="d-flex justify-content-center">
              <button class="btn btn-sm btn-primary">{{ button_label|default('Sauvegarder') }}</button>
          </div>
        </div>
      </div>
    </section>
  </div>
{{ form_end(form) }}
{% endblock %}